<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_tastyHouse_layout"
    android:layout_height="50dp">

    <TextView
        android:textColor="#000000"
        android:id="@+id/item_tastyHouse_number"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tastyHouse_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:text="zzz"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/item_tastyHouse_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="140dp"
        android:text="중식"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/item_tastyHouse_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.3km"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="200dp" />

    <ImageView
        android:id="@+id/item_tastyHouse_grade"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="1.3km"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="260dp" />

    <TextView
        android:id="@+id/item_tastyHouse_gradeTv"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="260dp"
        android:text="평점"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_height="wrap_content" />

</RelativeLayout>